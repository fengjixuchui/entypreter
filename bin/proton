printf '\033]2;Proton Framework\a'

#blue start 
	BS="-e \033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="\033[1;31m"
#green start
	GNS="-e \033[1;32m"
#white start
        WHS="\033[0;97m"

if [[ "$1" = "-u" || "$1" = "--update" ]]
then
if [[ -d /data/data/com.termux ]]
then
if [[ -f /data/data/com.termux/files/usr/bin/proton ]]
then
UPD="true"
else
UPD="false"
fi
else
if [[ -f /usr/local/bin/proton ]]
then
UPD="true"
else
UPD="false"
fi
fi
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" = "" ]]
then 
sleep 1
echo -e ""$RS"[-] "$WHS"Download failed!"$CE""
sleep 1
exit
fi
if [[ $EUID -ne 0 ]]
then
sleep 1
echo -e ""$RS"[-] "$WHS"Permission denied!"$CE""
sleep 1
exit
fi
sleep 1
echo ""$BS"[*] "$WHS"Installing update..."$CE""
{
rm -rf ~/proton
rm /bin/proton
rm /usr/local/bin/proton
rm /data/data/com.termux/files/usr/bin/proton
cd ~
git clone https://github.com/entynetproject/proton.git
if [[ "$UPD" != "true" ]]
then
sleep 0
else
cd proton
chmod +x install.sh
./install.sh
fi
} &> /dev/null
echo ""$GNS"[+] "$WHS"Successfully updated!"$CE""
sleep 1
exit
fi

if [[ -d ~/proton ]]
then
{
cd ~/proton
mkdir etc/.disabled
mv proton etc/.disabled
mv etc/proton ~/proton
cp etc/.disabled/proton etc
rm -rf etc/.disabled
} &> /dev/null
chmod +x proton
./proton $1 $2 $3 $4 $5 $6 $7 $8 $9
{
cd ~/proton
mkdir etc/.disabled
mv proton etc/.disabled
mv etc/proton ~/proton
cp etc/.disabled/proton etc
rm -rf etc/.disabled
} &> /dev/null
else
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/proton.git
cd $OLDPWD
cd ~/proton
mkdir etc/.disabled
mv proton etc/.disabled
mv etc/proton ~/proton
cp etc/.disabled/proton etc
rm -rf etc/.disabled
} &> /dev/null
chmod +x proton
./proton $1 $2 $3 $4 $5 $6 $7 $8 $9
{
cd ~/proton
mkdir etc/.disabled
mv proton etc/.disabled
mv etc/proton ~/proton
cp etc/.disabled/proton etc
rm -rf etc/.disabled
} &> /dev/null
else
cd ~
sleep 1
exit
fi
fi
